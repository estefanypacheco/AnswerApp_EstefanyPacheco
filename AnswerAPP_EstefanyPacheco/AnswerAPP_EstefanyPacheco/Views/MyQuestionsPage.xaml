<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnswerAPP_EstefanyPacheco.Views.MyQuestionsPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="My Questions List"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

                <ListView x:Name="LstMyQuestions" RowHeight="300" >
                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <ImageCell Text="{Binding Ask1}"
                                       Detail="{Binding AskDetail}"
                                       ImageSource="{Binding ImageUrl}"
                                       DetailColor="DarkBlue" TextColor="White"/>
                            
                            


                        </DataTemplate>
                    </ListView.ItemTemplate> 
               
                    </ListView>

            </StackLayout>




        </ScrollView>

    </ContentPage.Content>
</ContentPage>